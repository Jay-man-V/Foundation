<Window
    x:Class="Foundation.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"

    Title="MainWindow"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    
    d:DesignHeight="450"
    d:DesignWidth="800"
>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="22" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>

    <Border Style="{StaticResource WindowMainPanelStyle}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="22" />
                <RowDefinition Height="*" />
                <RowDefinition Height="22" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
		            Grid.Column="0"
                    HorizontalAlignment="Center"
		            VerticalAlignment="Center"
		            FontSize="14"
		            Text="{Binding FormTitle}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding IsActive, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                    <Setter Property="Foreground" Value="{DynamicResource WindowTitleBarInactiveText}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <Button
                    Grid.Row="0"
		            Grid.Column="1"
		            Click="OnMinimizeButtonClick"
		            RenderOptions.EdgeMode="Aliased"
		            Style="{StaticResource TitleBarButtonStyle}">
                    <Path
			            Width="46"
			            Height="22"
			            Data="M 18,15 H 28"
			            Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			            StrokeThickness="1" />
                </Button>
                <Button
                    Grid.Row="0"
		            Name="MaximizeButton"
		            Grid.Column="2"
		            Click="OnMaximizeRestoreButtonClick"
		            Style="{StaticResource TitleBarButtonStyle}">
                    <Path
			            Width="46"
			            Height="22"
			            Data="M 18.5,10.5 H 27.5 V 19.5 H 18.5 Z"
			            Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			            StrokeThickness="1" />
                </Button>
                <Button
                    Grid.Row="0"
		            Name="RestoreButton"
		            Grid.Column="2"
		            Click="OnMaximizeRestoreButtonClick"
		            Style="{StaticResource TitleBarButtonStyle}">
                    <Path
			            Width="46"
			            Height="22"
			            Data="M 18.5,12.5 H 25.5 V 19.5 H 18.5 Z M 20.5,12.5 V 10.5 H 27.5 V 17.5 H 25.5"
			            Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			            StrokeThickness="1" />
                </Button>
                <Button
                    Grid.Row="0"
		            Grid.Column="3"
		            Click="OnCloseButtonClick"
		            Style="{StaticResource TitleBarCloseButtonStyle}">
                    <Path
			            Width="46"
			            Height="22"
			            Data="M 18,11 27,20 M 18,20 27,11"
			            Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
			            StrokeThickness="1" />
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
